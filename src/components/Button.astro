---
import { Icon } from "astro-icon/components";

export interface Props {
  buttonLink: string;
  buttonText: string;
  iconName: string;
}

const { buttonLink, buttonText, iconName } = Astro.props;
---
<button type="button" class="btn rounded-md px-6 py-4 bg-cyan-700 dark:bg-cyan-400 text-white dark:text-black">
  <a href={buttonLink} class="flex items-center justify-center gap-3">
    <Icon name={iconName} class="size-8" />
    <span class="font-semibold">{buttonText}</span>
  </a>
</button>