import { Icon } from "astro-icon/components";
import type { FooterLink } from "@/types";

const links: Array<FooterLink> = [
  {
    url: "/contact",
    description: "Contact Us",
    icon: "mdi:envelope",
  },
  {
    url: "https://vimeo.com/sunrisevistamedia",
    description: "Vimeo Channel",
    icon: "fa-brands:vimeo",
  },
  {
    url: "https://www.facebook.com/Sunrisevistamedia",
