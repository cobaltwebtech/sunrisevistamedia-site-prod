---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section
  class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8"
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-extrabold text-4xl"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-2xl text-center font-semibold text-xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
