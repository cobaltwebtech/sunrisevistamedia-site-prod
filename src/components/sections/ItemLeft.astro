---
import { Image } from "astro:assets";
import Button from "@/components/Button.astro";
// Destructure the props passed to the Astro component
const { title, subTitle, btnExists, btnText, btnURL, btnIcon, img, imgAlt } =  Astro.props;
// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnText: string;
  btnURL: string;
  btnIcon: string;
  img: any;
  imgAlt: any;
}
---

<section
  class="mx-auto max-w-[85rem] items-center gap-8 px-4 py-10 sm:px-6 sm:py-16 md:grid md:grid-cols-2 lg:grid lg:grid-cols-2 lg:px-8 lg:py-14 xl:gap-16 2xl:max-w-full"
>
  <!-- The Image component on the left side -->
  <Image
    class="w-full rounded-xl"
    src={img}
    alt={imgAlt}
    draggable={"false"}
    format={"avif"}
    width="672"
  />
  <!-- The container for title, subtitle, and optional CTA button -->
  <div class="mt-4 md:mt-0">
    <!-- The title of the section -->
    <h3
      class="mb-4 text-balance text-4xl font-extrabold"
    >
      {title}
    </h3>
    <!-- The subtitle of the section -->
    <p
      class="mb-4 max-w-prose text-pretty font-light"
    >
      {subTitle}
    </p>
    <!-- Conditionally render the Button if btnExists is true -->
    {btnExists ? 
      <div class="w-max">
        <Button buttonText={btnText} buttonLink={btnURL} iconName={btnIcon} />
      </div> 
      : null
    }
  </div>
</section>
