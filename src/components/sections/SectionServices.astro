---
import { Icon } from "astro-icon/components";
import ContentSection from "@/components/sections/ContentSection.astro";
import Button from "@/components/Button.astro";
import type { ServicesItem } from "@/types";

const services: Array<ServicesItem> = [
  {
    title: "Promotional",
    description:
      "National commercials, social media ads, and promotional videos are just a few of the ways we can help you reach your audience.",
    icon: "mdi:bullhorn",
  },
  {
    title: "Live Events",
    description:
      "We can capture your event in real-time, or create a highlight reel to showcase the best moments. We specialize in coporate events, conferences, festivals, concerts, and more.",
    icon: "mdi:youtube-tv",
  },
  {
    title: "Interviews",
    description:
      "We can help you tell your story through interviews, testimonials, documentaries, and instructional courses.",
    icon: "fluent:people-chat-20-filled",
  },
];
---

<ContentSection title="Our Services">
  <Fragment slot="lead">
    As a video production company based out of Austin, Texas, we have the <span class="text-primary">expertise and skills</span> to showcase your vision. 
  </Fragment>
  <p class="max-w-5xl mt-8 text-lg text-center">
    Storytelling is an art and Sunrise Vista Media has the passion for bringing your story to life.<br /><span class="text-primary">Focused content</span> and <span class="text-primary">stellar visuals</span> is what makes our work incomparable!
  </p>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      services.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl text-secondary">{title}</p>
          <p class="text-justify text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
  <Button 
    buttonLink="/services" 
    buttonText="View Our Services" 
    iconName="mingcute:arrow-right-fill" 
  />

</ContentSection>
